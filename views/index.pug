extends ./layouts/layouts.pug

block title
  | Trang Chủ - Music

block append jumbotron
  include components/_jumbotron.pug

block content
  section.news-song
    +header-title("Bài hát mới")
      .m-header__viewmore
        a.btn.btn-sm.btn-primary(href="#")
          i.far.fa-play-circle
          | Nghe tất cả
    .row
      .news-song__left
        //- Iteration song
        - for (var i = 0; i < 5; i++) {
          +song(songs[i])
        - }
      .news-song__right
        - for (var i = 5; i < 10; i++) {
          +song(songs[i])
        - }
  section.news-album
    +header-title("Album mới")
      .m-header__viewmore
        a.btn.btn-sm.btn-primary(href="#")
          i.far.fa-play-circle
          | Xem thêm
    .row
      +song-cover("album", "101024", "The Growing Leaf", "Mons Lvnae")
      +song-cover("album", "101025", "In The End (Single)", "Tommee Profitt")
      +song-cover("album", "101034", "(Reverse) (2019)", "Hồ Mộng Châu (胡梦周)")
      +song-cover("album", "100959", "Thói Quen (习惯) (2019)", "Hạ Uyển An(夏婉安)")
      +song-cover("album", "101024", "The Growing Leaf", "Mons Lvnae")
      +song-cover("album", "100959", "Thói Quen (习惯) (2019)", "Hạ Uyển An(夏婉安)")
      +song-cover("album", "101024", "The Growing Leaf", "Mons Lvnae")
      +song-cover("album", "101025", "In The End (Single)", "Tommee Profitt")
  section.m-topic
    +header-title("Chủ đề nổi bật")
      .m-header__viewmore
        a.btn.btn-sm.btn-primary(href="#")
          i.far.fa-play-circle
          | Xem thêm
    .row
      //- Iteration topics
      //- each data in topics
      //-   +topics(data)
      - for (var i = 0; i < topics.length; i++) {
          +topics(topics[i])
      - }

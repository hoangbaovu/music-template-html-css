//- navbar_menu
mixin navbar_menu(data)
  if (selected === data.id)
    li.nav-item.active
      a.nav-link(href= data.link) #{data.name}
        span.sr-only (current)
  else
    li.nav-item
      a.nav-link(href= data.link) #{data.name}

//- header-title
mixin header-title(name="Header Name", link="#")
  .m-header
    h2.m-header__title
      a(href=link)=name
    if block
      block

//- Song
mixin song(data)
  .song
    .song__img
      a(href= data.link)
        img(src=`./assets/images/music/${data.imgid}.jpg`, alt='')
    .song-info
      h4.song-info__title
        a(href= data.link) #{data.name}
      p.song-info__singer
        if (typeof(data.singer) === 'object')
          each i in data.singer
            a(href= i.link) #{i.name}
        else
          a(href='#') #{data.singer}
    .song__more
      a(href='/song.html')
        i.far.fa-play-circle
      a(href='#')
        i.fas.fa-cloud-download-alt
      a(href='#')
        i.fas.fa-share-alt

mixin song-large(data)
  .song.song--large
    .song__count
      span
    .song__img
      a(href= data.link)
        img(src=`assets/images/music/${data.imgid}.jpg`, alt='')
        .overlay
          .overlay-play
            i.far.fa-play-circle
    .song-info.song-info--medium.song-info--song-page
      h4.song-info__title
        a(href= data.link) #{data.name}
      p.song-info__singer
        if (typeof(data.singer) === 'object')
          each singer in data.singer
            a(href= singer.link) #{singer.name}
        else
          a(href='#') #{data.singer}
      p.song-info__album
        | Album:
        a(href= data.link) #{data.album}
      p.song-info__authors
        | Sáng tác:
        a(href='#', title= data.authors) #{data.authors}
      p.song-info__category
        | Thể loại:
        each category in data.category
          a(href='#', title='Việt Nam')= category

mixin song-widget(assets="music" ,imgid="99156", name="Song Name", singer="Singer Name")
  .song(class!=attributes.class).song--widget.song--no-hover
    .song__img
      a(href='song.html')
        img(src=`./assets/images/${assets}/${imgid}.jpg`, alt='')
    .song-info
      h4.song-info__title
        a(href='song.html')=name
      p.song-info__sub-title
        a(href='#')=singer

//- song-cover
mixin song-cover(data)
  .song-cover
    a(href= data.link)
      .song-cover__img
        img(src=`assets/images/album/${data.imgid}.jpg`, alt=`${data.name}`)
        .overlay
          .overlay-play
            i.far.fa-play-circle
    .song-info
      h4.song-info__title
        a(href= data.link) #{data.name}
      p.song-info__sub-title
        a(href= data.link) #{data.singer}

//- topics
mixin topics(data)
  .topics
    a(href= data.link)
      .topics__img
        img(src=`assets/images/topics/${data.imgid}.jpg`, alt='')
        .overlay.overlay-bg.overlay--no-opacity
          span #{data.name}

//- tag cloud
mixin tagcloud(data)
  a.widget-tagcloud__link(href= data.link) #{data.name}

//- widget-singer
mixin widget-singer(imgid="48", singer="Singer Name")
  a.widget-singer__item(href='#', style=`background-image: url(./assets/images/singer/${imgid}.jpg)`)&attributes(attributes)
    span=singer
